DEFINE MEASURE Sales[ByCountry] =
    VAR SalesByCustomer =
        ADDCOLUMNS (
            VALUES ( Customer[Country] ),
            "Amount", [Sales Amount]
        )
    VAR Result = TOJSON (  SalesByCustomer, 3  )
    RETURN Result
EVALUATE
SUMMARIZECOLUMNS ( 'Customer'[Continent], "By Country JSON", [ByCountry] )