DEFINE MEASURE Sales[ByCountry] =
    VAR SalesByCustomer =
        ADDCOLUMNS (
            VALUES ( Customer[Country] ),
            "Amount", [Sales Amount]
        )
    VAR Result = TOCSV (  SalesByCustomer, 3, ",", FALSE  )
    RETURN Result
EVALUATE
SUMMARIZECOLUMNS ( 'Customer'[Continent], "By Country CSV", [ByCountry] )
